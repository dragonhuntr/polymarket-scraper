# Database Configuration
# PostgreSQL connection string for Prisma
# Format: postgresql://user:password@host:port/database
# For Prisma 7, this can also be configured in prisma.config.ts or passed to PrismaClient
DATABASE_URL="postgresql://user:password@localhost:5432/polymarket_scraper?schema=public"

# Polymarket API Credentials (Optional)
# L1 Credentials - for basic API access
POLY_ADDRESS=""
POLY_SIGNATURE=""
POLY_TIMESTAMP=""
POLY_NONCE=""

# L2 Credentials - for advanced API access
POLY_API_KEY=""
POLY_PASSPHRASE=""

# Application Configuration
# Environment: development, production, test
NODE_ENV="development"

# Logging
# Set to "true" to enable verbose logging
LOG_LEVEL="info"
