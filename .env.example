# Database Configuration
# PostgreSQL connection string for Prisma
# Format: postgresql://user:password@host:port/database
# For Prisma 7, this can also be configured in prisma.config.ts or passed to PrismaClient
DATABASE_URL="postgresql://user:password@localhost:5432/polymarket_scraper?schema=public"

# Application Configuration
# Environment: development, production, test
NODE_ENV="development"

# Server Configuration
# Host to bind the server to (default: 0.0.0.0 to accept connections from all interfaces)
HOST="0.0.0.0"
# Port to run the server on (default: 3000)
PORT="3000"

# Scraper Configuration
# Interval in milliseconds between event scrapes (default: 60000 = 1 minute)
SCRAPE_INTERVAL_MS="60000"

# Logging
# Set to "info", "debug", "warn", or "error" to control log verbosity
LOG_LEVEL="info"